<h1>科目一覧</h1>
<% @subjects.each do |subject| %>
  
  <!-- 追加 -->
  <% if user_signed_in? %>
    <% if subject.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
        <p><span><%= subject.name %></span><%=link_to "❤" , subject_favorites_path(subject.id), method: :delete,:style=>"color:red;" %></p>
    <% else %>
        <p>
        <span><%= subject.name %></span>
        
        <%=link_to "❤" ,subject_favorites_path(subject.id), method: :post,:style=>"color:#EEEEEE;" %></p>
    <% end %>
  <% else %>
    <p><span>お気に入り数: </span><%= subject.favorites.count %></p>
  <% end %>
  <!-- ここまで -->
<% end %>